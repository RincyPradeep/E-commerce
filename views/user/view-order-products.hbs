<section>
    <div class="container pt-5 mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-sm-6 col-md-4 col-lg-3 p-3 m-auto text-center">
                <div class="card m-auto" style="width: 15rem; height:24rem">
                    <img src="/product-images/{{this.product._id}}.jpg" class="card-img-top" alt="..."
                        style="height:13rem">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <p class="card-text">Quantity:{{this.quantity}}</p>
                        <p class="card-text"><b><i class="fa fa-inr pr-2"></i>{{this.product.Price}}</b></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>