<section>
    <div class="container">
        {{#if status}}
        <h3 class="text-center center">Order List is Empty</h3>
        {{else}}
        <table class="table table-bordered table-hover table-responsive" style="margin-top:10rem">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td><i class="fa fa-inr pr-2"></i>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a href="/view-order-products/{{this._id}}" class="btn order-btn" style="width:128px">View Products</a>
                    </td>                    
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
</section>