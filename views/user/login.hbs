<div>
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="container login">
                <h2 class="text-center">Login</h2>
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" class="form-control" name="Email" value="basil@gmail.com">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" value="123">
                    </div>
                    {{#if loginErr}}
                    <p class="error text-danger">{{loginErr}}</p>
                    {{/if}}
                    <a href="/signup">Create new account ?</a>
                    <button type="submit" class="btn home-btn float-right">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>