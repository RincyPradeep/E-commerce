<section>
    <div class="container">        
        {{#if status}}
        <h3 class="text-center mx-auto">No Orders yet</h3>
        {{else}}
        <table class="table table-responsive mt-5" style="overflow-y: hidden">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each shippedItems}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.name}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td><i class="fa fa-inr pr-2"></i>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td id="status">{{this.status}}</td>                    
                 </tr>
                {{/each}}             
            </tbody>
        </table>
        {{/if}}
    </div>
</section>

