<div>
    <div class="row">
        <div class="col-md-6 m-auto">
            <div class="container login">
                <h2 class="text-center">Admin Login</h2>
                <form action="/admin/login" method="POST">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" class="form-control" name="Email" value="admin@gmail.com">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" value="admin">
                    </div>
                    {{#if loginErr}}
                    <p class="error text-danger">{{loginErr}}</p>
                    {{/if}}

                    <button type="submit" class="btn home-btn float-right mb-5">Login</button>
                </form>
            </div>
        
        </div>
    </div>
</div>