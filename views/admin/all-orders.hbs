<section>
    <div class="container">
        <a class="btn order-btn float-right mt-5 mb-5" href="/admin/shipped-orders">Shipped Orders</a>
        {{#if status}}
        <h3 class="text-center mx-auto">No Orders yet</h3>
        {{else}}
        <table class="table table-bordered table-hover table-responsive mt-5" style="overflow-y: hidden">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each placedItems}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.name}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td><i class="fa fa-inr pr-2"></i>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td id="status">{{this.status}}</td>
                    <td>
                        <a href="/admin/view-order-products/{{this._id}}" class="btn order-btn" style="width:128px">View Products</a>
                    </td>
                    <td>
                        <button class="btn btn-shipped" onclick="changeStatus('{{this._id}}')">Shipped</button>
                    </td>
                 </tr>
                {{/each}}             
            </tbody>
        </table>
        {{/if}}
    </div>
</section>

