<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn order-btn ml-auto mb-5">Add Product</a>
    </div>
    <table class="table table-responsive mt-5" id="productsTable">
      <thead>
        <tr>
          <th>No.</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td><i class="fa fa-inr pr-2"></i>{{this.Price}}</td>
          <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt="" </td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn order-btn" style="margin-top: 3px;width: 70px;">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.Name}} ?')" style="margin-top: 3px;width: 70px;">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

<script>
  $(function () {
    $('#productsTable').DataTable();
  });
</script>